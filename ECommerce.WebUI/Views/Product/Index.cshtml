@model ProductListViewModel

<p>
	<a href="/product/add" class="btn btn-outline-primary">Create New</a>
</p>

<table class="table">
	<thead>
		<tr>

			@if (@Model.AZState)
			{
				<th><a class="btn btn-outline-primary" href="/product/index?page=@Model.CurrentPage&category=@Model.CurrentCategory&azState=true">A to Z</a></th>
			}
			else
			{
				<th><a class="btn btn-outline-danger" href="/product/index?page=@Model.CurrentPage&category=@Model.CurrentCategory&azState=false">Z to A</a></th>
			}


			@if (@Model.LHState)
			{
				<th><a class="btn btn-outline-primary" href="/product/index?page=@Model.CurrentPage&category=@Model.CurrentCategory&lhState=true">Low to High</a></th>
			}
			else
			{
				<th><a class="btn btn-outline-danger" href="/product/index?page=@Model.CurrentPage&category=@Model.CurrentCategory&lhState=false">High to Low</a></th>
			}

		</tr>
		<tr>
			<th>ProductName</th>
			<th>UnitPrice</th>
			<th>UnitsInStock</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Products)
		{
			<tr>
				<td>
					@item.ProductName
				</td>
				<td>
					@item.UnitPrice
				</td>
				<td>
					@item.UnitsInStock
				</td>
				<td>
					<a class="btn btn-xs btn-success">Add To Cart</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<product-list-pager current-category="@Model.CurrentCategory"
					current-page="@Model.CurrentPage"
					page-count="@Model.PageCount"
					page-size="@Model.PageSize">

</product-list-pager>

